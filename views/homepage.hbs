{{#each data as |post|}}

    <div class="gallery" align="center">
        <div class="desc">
            <div class="row">
                <div class="col-md-2">
                <img class="rounded-circle" src="/profile/{{post.postedByImage}}" height="75" >
                </div>
                <div class="col-md-8">
                   <a href="/profile/{{post.postedBy}}">{{ post.postedBy }}</a>
                </div>
            </div>
        </div>
        <hr/>
        <a href="/posts/{{post._id}}"><img  src= "{{post.image}}" height="400"  ></a>
        <hr/>
        <div class="desc">{{ post.story }}</div>
    </div>

{{/each}}


